/* pages/user/user.wxss */
page{
  height: 100%;
  width: 100%;
}
.user-top-bg{
  background-color: rgb(43, 155, 231);
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: center;
  height: 400rpx;
}
.avatar{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-top: 20px;
}
.user-top-name{
  color: #ffffff;
  margin: 10px;
}
.user-order-bg{
  background-color: #ffffff;
  box-shadow: 3px 3px 3px  gray;
  margin:10px;
  border-radius: 15px;
  margin-top: -60px;
}
.user-order-title{
  font-weight: 600;
  position: relative;
  left: 20px;
  top: 10px;
}
.user-order{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
  margin:10px 0 10px 0 ;
}
.user-order-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin: 10px 0 10px 0 ;
  position: relative;
}
.user-order-image{
  width: 60px;
  height: 60px;
  margin-bottom: 10px;
}
.user-order-image-bg{
  background-color: rgb(0, 169, 249);
  border-radius: 30px;
  width: 60px;
  height: 60px;
  margin-bottom: 10px;
}
.user-order-image-touming{
  width: 40px;
  height: 40px;
  position: absolute;
  top: 10px;
}