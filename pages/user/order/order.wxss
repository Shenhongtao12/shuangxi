page{
  height: 100%;
  background-color: rgb(243, 243, 243);
  margin: 0;
}
.swiper-tab{  
  width: 100%;  
  border-bottom: 2rpx solid #eeeeee;  
  text-align: center;  
  line-height: 80rpx;
  background-color: #ffffff;
}  
.swiper-tab-item{  
  font-size: 30rpx;  
  display: inline-block;  
  width: 25%;  
  color: #666666;  
}  
.on{ color: #f10b2e;  
  border-bottom: 5rpx solid #f10b2e;
}  

.swiper-box{  height: 100%; width: 100%; overflow: hidden;}  

.order-item{
  background-color: #ffffff;
  margin: 10px;
  padding: 10px;
  display: flex;
  flex-direction: column;
  border-radius: 20px;
}
.order-item-row{
  display: flex;
  flex-direction: row;
  margin: 5px;
}
.line{
  border-bottom: 1px solid rgb(243, 243, 243);
  margin: 10px;
}
.changeTitle{
  font-size: 13px;
  border: 1px solid rgb(43, 155, 231);
  border-radius: 15px;
  color: rgb(43, 155, 231);
  padding: 2px 10px 2px 10px;
}
.scroll-views{
  height: 100%;
}