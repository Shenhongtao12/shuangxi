page{
  width: 100%;
  height: 100%;
}
.personality-bottom-title{
  display: flex;
  flex-direction: row;
  margin-top: 20px;
}
.personality-bottom-title-detail{
  flex:1;
  text-align: center;
}
.personality-bottom-button-father{
  display: flex;
  flex-direction: row;
  margin-top: 15px;
}
.personality-bottom-button{
  flex:1;
  height: 40px;
  border: 1px solid gray;
  margin: 15px;
  line-height: 40px;
  text-align: center;
  border-radius: 15px;
}
.personality-bottom-button:active{
  box-shadow:1px 1px 3px #000;
}
.personality-bottom-begin{
  background-color: rgb(10, 158, 255);
  color: #ffffff;
  width: 200px;
  margin-top: 50px;
  border-radius: 15px;
}
.personality-bottom-begin:active{
  box-shadow:1px 1px 3px #000;
}
.personality-scale{
  display: flex;
  flex-direction: column;
}
.scale{
  margin: 10px;
  box-shadow:2px 2px 5px #000;
}
.subject-button-father{
  display: flex;
  flex-direction: row;
  margin: 3px;
}
.subject-button-left{
  border-radius: 15px;
  background-color: #ffffff;
  border: 1px solid rgb(10, 158, 255);
  color:rgb(10, 158, 255);
  font-weight: bold;
  flex:1;
}
.subject-button-right{
  border-radius: 15px;
  background-color: rgb(10, 158, 255);
  color:#ffffff;
  font-weight: bold;
  flex:1
}
.subject-detail-father{
  display: flex;
  flex-direction: row;
  margin: 15px;
}
.subject-question{
  margin: 20px;
}
.question-title-state{
  margin: 20px;
  color: rgb(153, 153, 153);
  display: inline-block;
}
.question-state{
  margin:20px;
  text-align: center;
}
.bottom{
  background-color: rgb(247, 247, 247);
  padding: 20px;
  margin-top: 100px;
}
